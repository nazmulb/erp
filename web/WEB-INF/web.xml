<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <display-name>Field Nation ERP</display-name>
    <servlet>
        <servlet-name>UserController</servlet-name>
        <servlet-class>com.erp.controller.user.UserController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ProductController</servlet-name>
        <servlet-class>com.erp.controller.inventory.ProductController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PurchaseRequestController</servlet-name>
        <servlet-class>com.erp.controller.inventory.PurchaseRequestController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ProductRequestController</servlet-name>
        <servlet-class>com.erp.controller.inventory.ProductRequestController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserController</servlet-name>
        <url-pattern>/login_process</url-pattern>
        <url-pattern>/user</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ProductController</servlet-name>
        <url-pattern>/product</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PurchaseRequestController</servlet-name>
        <url-pattern>/purchase_request</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ProductRequestController</servlet-name>
        <url-pattern>/product_request</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <error-page>
        <error-code>404</error-code>
        <location>/404.jsp</location>
    </error-page>
    <error-page>
        <exception-type>java.lang.Throwable</exception-type>
        <location>/error.jsp</location>
    </error-page>
    <jsp-config>
        <jsp-property-group>
            <description>header and footer</description>
            <url-pattern>/404.jsp</url-pattern>
            <url-pattern>/index.jsp</url-pattern>
            <url-pattern>/error.jsp</url-pattern>
            <url-pattern>/WEB-INF/view/template/*</url-pattern>
            <url-pattern>/login.jsp</url-pattern>
            <include-prelude>/WEB-INF/jspf/header.jspf</include-prelude>
            <include-coda>/WEB-INF/jspf/footer.jspf</include-coda>
        </jsp-property-group>
    </jsp-config>
</web-app>
